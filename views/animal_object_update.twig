{% extends "__layout.twig" %}

{% block content %}
    <h1>Редактирование объекта</h1>
    <hr>

    {% if message %}
    <div class="alert alert-info">
        {{ message }}
        <a href="/amazing-animal/{{ object.id }}">Открыть измененный объект</a>
    </div>
    {% endif %}

    <form action="" enctype="multipart/form-data" method="POST" class="row g-3">
        <input type="hidden" class="form-control" name="id" value="{{ object.id}}">
        <div class="col-4">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title" value="{{ object.title }}">
        </div>
        <div class="col-4">
            <label class="form-label">Краткое описание</label>
            <input type="text" class="form-control" name="description" value="{{ object.description }}">
        </div>
        <div class="col-4">
            <label class="form-label">Тип</label>
            <select class="form-control" name="type">
                {% for type in types %}
                    <option value="{{type.title}}" {% if type.title == object.type %}selected{% endif %}>
                        {{type.title|title}}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Картинка</label>
            <input type="file" class="form-control" name="image">
            <input type="hidden" class="form-control" name="image-bag" value="{{ object.image }}">
        </div>
        <div class="col-12">
            <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5">{{ object.info }}</textarea>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
        </div>
        {% if object.image %}
            <div class="row"><img src="{{ object.image }}" style="width:200px; height:200px; object-fit:cover; margin: 5px;"></div>
        {% endif %}
    </form>

{% endblock %}